---
import ArticleTitle from "@/components/content/article-title.astro"

/* ルーティング ------------------------------------- */
export async function getStaticPaths() {
  const path = await import("path")
  const articles = await Astro.glob("../../articles/*.md")
  return articles.map(a => {
    return {
      params: {
        id: path.basename(a.file, ".md"),
      },
      props: {
        info: a.frontmatter,
        getHeadings: a.getHeadings,
        Content: a.Content,
      },
    }
  })
}

/* ページ ---------------------------------------- */

const { info, getHeadings, Content } = Astro.props

const subtitles = await getHeadings()
console.dir(subtitles)
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{info.title}</title>
  </head>
  <body>
    <ArticleTitle text={info.title} />
    <Content />
    <p>作成日: {info.created_at}</p>
  </body>
</html>

<style>
  body {
    font-family: "木漏れ日ゴシックP";
  }
</style>
