---
import FitImage from "@/components/fit-image.astro"

interface Props {
  url: string
}

const { caption, url, ...props } = Astro.props
---

<figure>
  <FitImage {...props} src={url} alt="" />
  <figcaption>{caption}</figcaption>
</figure>

<style>
  figure {
    margin: 30px 0;
  }
  figcaption {
    margin-top: 5px;
    font-size: 0.75rem;
    color: #747474;
  }
</style>
